# Open document in fit-width mode by default
#
#
set adjust-open "best-fit"
# set font inconsolata
# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
# set smooth-scroll "true"
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10
set guioptions ""


set window-title-basename "true"
set selection-clipboard "clipboard"

set notification-error-bg       "#ff5555" # Red
set notification-error-fg       "#d4cfd0" # Foreground
set notification-warning-bg     "#ffb86c" # Orange
set notification-warning-fg     "#44475a" # Selection
set notification-bg             "#121212" # Background
set notification-fg             "#d4cfd0" # Foreground

set completion-bg               "#121212" # Background
set completion-fg               "#6272a4" # Comment
set completion-group-bg         "#121212" # Background
set completion-group-fg         "#6272a4" # Comment
set completion-highlight-bg     "#44475a" # Selection
set completion-highlight-fg     "#d4cfd0" # Foreground


set index-bg                    "#121212" # Background
set index-fg                    "#d4cfd0" # Foreground
set index-active-bg             "#44475a" # Current Line
set index-active-fg             "#d4cfd0" # Foreground

set inputbar-bg                 "#121212" # Background
set inputbar-fg                 "#d4cfd0" # Foreground
set statusbar-bg                "#121212" # Background
set statusbar-fg                "#d4cfd0" # Foreground

set highlight-color             "#ffb86c" # Orange
set highlight-active-color      "#ff79c6" # Pink

set default-bg                  "121212" # Background
set default-fg                  "#d4cfd0" # Foreground

set render-loading              true
set render-loading-fg           "#282a36" # Background
set render-loading-bg           "#d4cfd0" # Foreground

#
# Recolor mode settings
#

set recolor-lightcolor          "#121212" # Background
set recolor-darkcolor           "#d4cfd0" # Foreground

#
# Startup options
#
set adjust-open width
set recolor true
